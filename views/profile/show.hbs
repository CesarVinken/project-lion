<script>const user = null</script>
<script src='/javascripts/data.js'></script>
<script src='/javascripts/user-info.js'></script>
<script src='/javascripts/util/language-init.js'></script> {{> navbar user}}
<script src='/javascripts/util/country-init.js'></script>

<div class="flex-column-center">
  <div id="content-wrapper-profile">
    <div class="column">
      <div id="profile-pic-large">
        <img src="{{user.picture}}">
      </div>
      <section id="location">
        <hr>

        <h3 data-i18n="profile.location">Location</h3>
        <div class="row">
          <p class="info-category" data-i18n="profile.country">Country:</p>
          <p>{{user.location.country}}</p>
        </div>
        <div class="row">
          <p class="info-category" data-i18n="profile.city">City:</p>
          <p>{{user.location.city}}</p>
        </div>
      </section>
    </div>

    <div class="column">
      <section id="basic-info">
        <div>
          <p id="user-profile-name"> {{user.name}}</p>
        </div>
        {{#if user.ownProfile}}
        <div class="row">
          <p class="info-category" data-i18n="profile.email">Email address:</p>
          <p>{{user.email}}</p>
        </div>
        {{/if}}
        <div class="row">
          <p class="info-category" data-i18n="profile.age">Age:</p>
          <p>{{user.age}}</p>
        </div>
        <div>
          <p class="info-category" data-i18n="profile.description">About me:</p>
          <textarea readonly rows="4" cols="50">{{user.description}}</textarea>
        </div>
      </section>
      <section id="language">
        <hr>
        <h3 data-i18n="profile.languages">Languages</h3>
        <div class="row">
          <p class="info-category" data-i18n="profile.knownLanguages">Languages I know:</p>
          <ul class="lang-list">{{#each user.knownLanguages}}
            <li>
              {{this}}
            </li>{{/each}}
          </ul>
        </div>
        </br>
        <div class="row">
          <p class="info-category" data-i18n="profile.learningLanguages">Languages I am learning:</p>
          <ul class="lang-list">{{#each user.learningLanguages}}
            <li>
              {{this}}
            </li>{{/each}}
          </ul>
        </div>
        </br>
      </section>
    </div>
  </div>
  </br>
  </br>
  {{#if user.ownProfile}}
  <a href="/profile/edit" class="success-btn" data-i18n="profile.edit">Edit</a><br>
  <a href="/profile/delete/" class="danger-btn" data-i18n="profile.delete">Delete Account</a><br> {{else}}
  <a href="/tandems/add/{{this.user._id}}" class="success-btn" data-i18n="profile.startConversation">Start conversation</a>{{/if}}
</div>