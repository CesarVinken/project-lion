<h2>Login</h2>

<div class="flex-column-center">
  <form action="/login" method="POST" id="form-container">

    <div class="form-group">
      <label for="email" data-i18n="auth.email">Email</label>
      <input id="email" type="text" name="email" placeholder="someone@example.com">
      <label for="password" data-i18n="auth.password">Password</label>
      <input id="password" type="password" name="password" placeholder="">
    </div>

    </br> {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}
    </br>

    <div class="form-group">
      <button class="success-btn" data-i18n="auth.login">Log in</button>
      </br>
      <p class="account-message" data-i18n="auth.noAccount">
        Don't have an account yet?
        <a href="/signup" data-i18n="auth.signup">Sign up</a>
      </p>
    </div>
  </form>
</div>