{{> navbar data}}
<script>const data = {{{ dataString }}}</script>
<script src='/javascripts/data.js'></script>
<script src='/javascripts/event.js'></script>
<script src='/javascripts/language-init.js'></script>

<div class="content-wrapper">
    <h2>Create new Event</h2>
    <form method="POST" action="/events/new" encType="multipart/form-data">
        <h3>Basic Info</h3>
        <div class="form-group">
            <label for="title">Event title</label>
            <input type="text" id="title" name="title" placeholder="Title" required>
            <label for="description" required>Event description</label>
            <textarea rows="4" type="text" id="description" name="description" placeholder="My event is about.."></textarea>
            <label for="date" required>Event date</label>
            <input type="date" id="date" name="date" placeholder="Date">
            <label for="language" required>Event language</label>
            <select class="ui search selection dropdown" name="language" id="event-language">
            </select>
        </div>
        </br>
        <h3>Event Picture</h3>
        <div class="form-group">
            <label for="picture">Upload a Picture for your event</label>
            <input type="file" name="picture">
        </div>
        </br>
        <h3>Address</h3>
        <div class="form-group">
            <label for="country">Country</label>
            <select class="ui search selection dropdown" name="country" id="user-country">
                <option value="">Country</option>
            </select>
            <label for="city">City</label>
            <input type="text" id="city" name="city" placeholder="City">
            <label for="street">Street</label>
            <input type="text" id="street" name="street" placeholder="Street">
        </div>
        </br>
        <input type="submit" name="" id="submit" class="success-btn">
        </br>
    </form>
</div>