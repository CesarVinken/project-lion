<h3>Edit event</h3>
<form method="POST" action="/events/edit/{{ event._id}}">
    <label>Title:</label>
    <input type="text" name="title" placeholder="Name" value="{{ event.title}}">
    <label>Description:</label>
    <input type="text" name="description" placeholder="Description" value="{{ event.description}}">
    <input type="date" name="date" placeholder="Date" value="{{ event.date}}">
    <input type="String" name="language" placeholder="Language" value="{{ event.language}}">
    <label>Address</label>
    <input type="text" name="country" placeholder="Country" value="{{ event.location.country}}">
    <input type="text" name="city" placeholder="City" value="{{ event.location.city}}">
    <input type="text" name="street" placeholder="Street" value="{{ event.location.street}}">
    <button type="submit" name="" id="submit">Edit</button>
</form>